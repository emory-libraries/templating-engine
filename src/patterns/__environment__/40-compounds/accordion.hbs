{{#unless (and (eq showall false) (eq hideall false))}}

  <eul-accordion inline-template>

    <div class="accordion">

      <div class="accordion-title">{{title}}</div>

      <div class="accordion-toggles">
        {{#unless (eq showall false)}}
        <button class="accordion-toggles-toggle"
                @click="showAll">
          {{#if (and showall (not (eq showall true)))}}{{showall}}{{else}}Show All Sections{{/if}}
        </button>
        {{/unless}}
        {{#unless (eq hideall false)}}
        <button class="accordion-toggles-toggle"
                @click="hideAll">
          {{#if (and hideall (not (eq hideall true)))}}{{hideall}}{{else}}Hide All Sections{{/if}}
        </button>
        {{/unless}}
      </div>

      {{#each panels}}{{> molecules-accordion classes='accordion-panel' filterable=(default ../filterable false) group=../title}}{{/each}}

    </div>

  </eul-accordion>

  <noscript>

    <div class="accordion">

      <div class="accordion-title">{{title}}</div>

      {{#each panels}}{{> molecules-accordion classes='accordion-panel' filterable=false}}{{/each}}

    </div>

  </noscript>

{{else}}

  <div class="accordion">

    <div class="accordion-title">{{title}}</div>

    {{#each panels}}{{> molecules-accordion classes='accordion-panel' filterable=(default ../filterable false) group=../title}}{{/each}}

  </div>

{{/unless}}

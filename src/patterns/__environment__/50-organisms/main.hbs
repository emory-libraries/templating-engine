<div class="section-main{{#if type}} -{{type}}{{/if}}{{#if classes}} {{classes}}{{/if}}">
  {{> molecules-breadcrumbs classes="section-main-breadcrumb" }}
  {{#if (eq type 'bio-page')}}
    {{> organisms-intro-bio}}
    {{#if quote}}<p class="text -lead section-main-subtitle">&ldquo;{{quote}}&rdquo;</p>{{/if}}
  {{else}}
    {{> organisms-intro-alt-text}}
  {{/if}}
  <main class="section-main-body">
    {{#unless blocks}}
      {{#block 'section-main-body'}}{{/block}}
    {{else}}
      {{> compounds-blocks}}
    {{/unless}}
    {{#if has-related}}
      <div class="section-main-spacer"></div>
      <div class="section-main-content">{{> compounds-related-cards}}</div>
    {{/if}}
  </main>
  <aside class="section-main-sidebar">
    {{#block 'section-main-sidebar'}}{{/block}}
  </aside>
</div>
